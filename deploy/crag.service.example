[Unit]
Description=cRAG Flask (Gunicorn)
After=network.target

[Service]
Type=simple
User=crag
Group=crag
WorkingDirectory=/path/to/app
EnvironmentFile=/etc/crag.env
ExecStart=/opt/crag/venv/bin/gunicorn -c gunicorn.conf.py wsgi:app
Restart=always
RestartSec=5
LimitNOFILE=8192

[Install]
WantedBy=multi-user.target

